@inherits LayoutComponentBase

<div class="layout">
    <aside class="sidebar">
        <h2>Jogos</h2>
        <nav class="side-nav" aria-label="Navegacao de jogos">
            <NavLink href="" Match="NavLinkMatch.All" class="side-link">Menu</NavLink>
            <NavLink href="memoria-cars" class="side-link">Memoria Cars</NavLink>
            <NavLink href="memoria-gabby" class="side-link">Memoria Gabby</NavLink>
            <NavLink href="jogo-do-galo" class="side-link">Jogo do Galo</NavLink>
            <NavLink href="puzzle-paw-patrol" class="side-link">Puzzle Paw Patrol</NavLink>
        </nav>
    </aside>

    <main class="container">
        @Body
    </main>
</div>

<div id="winner-modal" class="winner-modal" aria-hidden="true" role="dialog" aria-modal="true" aria-labelledby="winner-title">
    <div class="winner-modal-card">
        <div class="winner-burst" aria-hidden="true"></div>
        <h2 id="winner-title">Vitoria!</h2>
        <p id="winner-message">Parabens!</p>
        <button id="winner-play-again" type="button">Continuar</button>
        <button id="winner-close" type="button" class="ghost-button" aria-label="Fechar">Fechar</button>
    </div>
</div>
